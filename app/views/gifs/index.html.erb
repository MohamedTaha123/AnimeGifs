


<div class="row">
  <div class="col-sm-6">
    <h1>Gifs</h1>
  </div>

  <div class="col-sm-6 text-right">
  <%= link_to new_gif_path, class: 'btn btn-primary' do %>
    Add New Gif
  <% end %>
  </div>
</div>

<div class="card-columns ">
  <% @gifs.each do |gif| %>
  <div class="card">
  
      <%= link_to  image_tag(gif.image.url(:thumb), class: "card-img-top" )%>
    <div class="card-body">
      <h5 class="card-title"><%= gif.label %></h5>
      <p class="card-text"><%= gif.description %></p>
      <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
    </div>
  </div> 
  <% end %>
</div>