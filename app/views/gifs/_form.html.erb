<%= simple_form_for(@gif, remote: true , validate: true) do |f| %>
<div class="text-center">
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
</div>

<div class="form-inputs">
  <div class="form-group">
      
      <%= f.file_field :image,as: :image_preview, hint: 'Upload a Gif'  %>
  </div>
  
  <div class="form-group">
    <%= f.input :label , placeholder: "Label"%>
    
  </div>

  <div class="form-group">
    <%= f.input :description,as: :text, placeholder: "Little Description"%>
  </div>

  <div class="form-group">
  
    <%= f.input :tag_list, value: f.object.tag_list.join(", "),placeholder: "Tag list (comma separated)", hint: 'Example: Ruby On Rails,Js' %>
    
  </div>
  

 

</div>

<div class="form-actions">
  <div class="text-center">
    <%= f.button :submit, "Upload a Gif " , class: "btn btn-lg btn-block btn-round btn-secondary", data: {disable_with: "Loading..." } %>
  </div>
</div>
<% end %>
