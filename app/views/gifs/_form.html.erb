<%= simple_form_for(@gif) do |f| %>
<div class="notifications top-right">
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
</div>

<div class="form-inputs">
  <div class="form-group">
    <div class="upload-btn-wrapper">
      
      <button class="btn">Upload a GIF</button>
      <%= f.file_field :image,as: :image_preview, input_html: {preview_version: :thumb}  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.input :description, as: :text, placeholder: "Little Description", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :label , placeholder: "Label"%>
  </div>
</div>

<div class="form-actions">
  <div class="text-center">
    <%= f.button :submit, "CREATE" , class: "btn btn-lg btn-round btn-dark" %>
  </div>
</div>
<% end %>
