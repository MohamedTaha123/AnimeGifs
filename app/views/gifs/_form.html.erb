<%= simple_form_for(@gif) do |f| %>
<div class="notifications top-right">
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
</div>

<div class="form-inputs">
  <div class="form-group">
      <%= f.input :image,as: :image_preview, class: 'form-control ', input_html: {preview_version: :thumb}  %>
  </div>
  <div class="form-group">
    <%= f.input :description, as: :text, placeholder: "Little Description", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.input :label , placeholder: "Label"%>
  </div>
</div>

<div class="form-actions">
  <div class="text-center">
    <%= f.button :submit, "CREATE" , class: "btn btn-lg btn-round btn-dark", data: {disable_with: "Loading..." } %>
  </div>
</div>
<% end %>
