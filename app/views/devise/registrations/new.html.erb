<div class="row">
  <div class="col">
  </div>
  <div class="col-sm-6  ml-auto mr-auto">
    <h1 class="text-center font-weight-bold">Sign Up</h1>
      
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),validate: true) do |f| %>
      
      <%#= devise_error_messages! %>

      <div class="form-group">
        <%= f.input :name, autofocus: true, class: 'form-control', placeholder: "Your Gihub Username",hint: "Use your Github Username", validate: true %>
      </div>

      <div class="form-group">
        <%= f.input :email,as: :email, autofocus: false, class: 'form-control', placeholder: "Email Address", validate: true %>
      </div>

      <div class="form-group">
        <%= f.input :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
      </div>

      <div class="form-group">
        <%= f.input :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password' %>
      </div>

      <div class="form-group">
        <%= f.submit "Sign up", class: "btn btn-outline-danger btn-block btn-lg" %>
     
       <%= render 'shared/links' %>
      </div>
     
    <% end %>
   </div>
   <div class="col">
    </div>
</div>
   
