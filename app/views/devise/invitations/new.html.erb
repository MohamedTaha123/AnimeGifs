<div class="col-sm-6  ml-auto mr-auto">
<h2 class="text-center font-weight-bold"><%= t "devise.invitations.new.header" %></h2>
<%= simple_form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }, validate: true) do |f| %>


  <% resource.class.invite_key_fields.each do |field| -%>
    <div class="form-inputs">
     
        <span class="ml-3">
           <h4 class="text-center">
              <%= image_tag @gravatar_image_url || "" %>
           </h4>
        </span>
     

      <%= f.text_field  field , placeholder: 'Email', data: {reflex: "input->GravatarReflex#perform"}, class: "form-control" %>
    </div>
  <% end -%>

  <div class="form-actions">
    <%= f.button :submit, t("devise.invitations.new.submit_button"), class: "btn btn-default btn-block" %>
  </div>

<% end %>
</div>
